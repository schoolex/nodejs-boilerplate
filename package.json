{
  "name": "nodejs-boilerplate",
  "version": "1.1.0",
  "description": "Clean Architecture for node.js projects (Typescript + Express + MongoDB)",
  "main": "main.ts",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "node dist/main.js",
    "dev": "nodemon src/main.ts",
    "lint": "eslint 'src/**/*.{js,ts}' --quiet",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "dependencies": {
    "@types/swagger-jsdoc": "^6.0.4",
    "agenda": "^5.0.0",
    "argon2": "^0.31.2",
    "body-parser": "^1.20.2",
    "celebrate": "^15.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-jwt": "^8.4.1",
    "helmet": "^7.1.0",
    "joi": "^17.12.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.3.0",
    "mongoose": "^8.1.3",
    "morgan": "^1.10.0",
    "pino": "^8.19.0",
    "pino-http": "^9.0.0",
    "pino-pretty": "^11.0.0",
    "swagger-ui-express": "^5.0.0"
