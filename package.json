{
  "name": "nodejs-boilerplate",
  "version": "1.0.0",
  "description": "Clean Architecture for node.js projects (Typescript + Express + TypeORM + Typedi)",
  "main": "main.ts",
  "repository": "https://github.com/satishbabariya/nodejs-boilerplate.git",
  "author": "Satish Babariya <satish.babariya@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "start:prod": "node dist/main.js",
    "start": "nodemon src/main.ts",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "dependencies": {
    "@types/swagger-jsdoc": "^6.0.1",
    "agenda": "^4.2.1",
    "argon2": "^0.28.5",
    "body-parser": "^1.20.0",
    "celebrate": "^15.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-async-handler": "^1.2.0",
    "express-jwt": "^7.7.5",
    "helmet": "^5.0.2",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.6.0",
    "mongoose": "^6.3.6",
    "morgan": "^1.10.0",
    "pino": "^7.6.3",
    "pino-http": "^6.5.0",
    "pino-pretty": "^7.6.1",
    "swagger-ui-express": "^4.5.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-jwt": "^6.0.4",
    "@types/jest": "^27.5.2",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.6.5",
    "@types/swagger-ui-express": "^4.1.3",
    "jest": "^27.5.1",
    "nodemon": "^2.0.19",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.5",
    "ts-node": "^10.7.0",
    "tslint": "^6.1.3",
    "typescript": "^4.7.4"
  }
}
